{
  "name": "@cadence/compiler",
  "version": "0.1.0",
  "description": "EPUB3 Media Overlays compiler for Cadence",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "cadence-compile": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "compile": "tsx src/index.ts compile",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "format": "biome format --write src",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "archiver": "^7.0.0",
    "commander": "^12.1.0",
    "fast-xml-parser": "^4.5.0",
    "parse5": "^7.2.1",
    "playwright": "^1.49.0",
    "wink-eng-lite-web-model": "^1.6.0",
    "wink-nlp": "^2.3.0",
    "yauzl": "^3.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@types/archiver": "^6.0.0",
    "@types/node": "^22.10.0",
    "@types/yauzl": "^2.10.3",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
